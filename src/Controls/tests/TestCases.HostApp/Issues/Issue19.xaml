<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.Issues.Issue19"
             Title="Android Image Stream Release Build Test">
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            <Label Text="Android Image Stream Release Build Test"
                   FontSize="18"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />
            
            <Label Text="This test verifies that ImageSource.FromStream() works correctly in Android Release builds with AndroidMarshalMethod enabled."
                   FontSize="14"
                   HorizontalOptions="Center" />
            
            <Image x:Name="TestImage"
                   HeightRequest="200"
                   WidthRequest="200"
                   BackgroundColor="LightGray"
                   HorizontalOptions="Center"
                   AutomationId="TestImage" />
            
            <Button Text="Load Image from Stream"
                    Clicked="OnLoadImageClicked"
                    AutomationId="LoadImageButton"
                    HorizontalOptions="Center" />
            
            <Label x:Name="StatusLabel"
                   Text="Click the button to load an image from stream"
                   FontSize="14"
                   HorizontalOptions="Center"
                   AutomationId="StatusLabel" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>