<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Maui.Controls.Sample.Issues.Issue27935">

    <VerticalStackLayout
        Padding="30,0"
        Spacing="25">

        <Button
            Text="Change Visiblity"
            Clicked="OnButtonClick"
            AutomationId="Button"
            HorizontalOptions="Center"/>

        <Label Text="Rectangle"
               FontAttributes="Bold"
               TextColor="Blue"/>

        <Rectangle x:Name="rectangle"
                   HeightRequest="100"
                   WidthRequest="100"
                   BackgroundColor="red"
                   IsVisible="false"/>

        <Label Text="RoundRectangle"
               FontAttributes="Bold"
               TextColor="Blue"/>

        <RoundRectangle x:Name="roundRectangle"
                        CornerRadius="20"
                        HeightRequest="100"
                        WidthRequest="100"
                        BackgroundColor="Green"
                        IsVisible="false"/>
    </VerticalStackLayout>
</ContentPage>